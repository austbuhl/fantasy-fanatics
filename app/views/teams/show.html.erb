<h1><%= @team.name %></h1>

<h3>Owner: <%= @team.owner.username %></h3>
<h3>League: <%= link_to @team.league.name, league_path(@team.league) %></h3>

<h4>Roster:</h4>
<% if flash[:dropped] %>
    <p style= "color: red;"><%= flash[:dropped] %></p>
<% elsif flash[:added]%>
    <p style= "color: green;"><%= flash[:added] %></p>
<% end %>



<table>
    <tr>
        <th>Player</th>
        <th>Position</th>
        <th>AVG Ranking</th>
    </tr>

    <% @team.players.each do |player| %>
        <tr>
            <td><%= link_to player.name, player_path(player) %> </td>
            <td><%= player.position %></td>
            <td><%= player.avg_ranking %></td>
        </tr>
    <% end %>
</table>
<br>
<br>
<%=button_to "Edit Roster", edit_team_path, method: "get"  %>
