<div class="container mt-3">
    <h1><%= @team.name %></h1>

    <h3>Owner: <%= @team.owner.username %></h3>
    <h3>League: <%= link_to @team.league.name, league_path(@team.league) %></h3>

    <h4>Roster:</h4>
    <% if flash[:dropped] %>
        <p style= "color: red;"><%= flash[:dropped] %></p>
    <% elsif flash[:added]%>
        <p style= "color: green;"><%= flash[:added] %></p>
    <% end %>


    <div class="btn-group" role="group" aria-label="Basic example">
        <%=button_to "Optimize Roster", optimal_path(@team), method: "get", class: "btn btn-success m-1" %>
        <%=button_to "Edit Roster", edit_team_path, method: "get", class: "btn btn-success m-1" %>
        <%= button_to "Delete Team", team_path(@team), method: "delete", class: "btn btn-danger m-1"  %>
    </div>
    <table class= "table table-bordered table-sm mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Player</th>
                <th class="text-center align-middle">Position</th>
                <th class="text-center align-middle">AVG Ranking</th>
            </tr>
        </thead>
        <tbody class= "table-white">
            <% @team.players.each do |player| %>
                <tr>
                    <td class="align-middle"><%= image_tag player.photo_url, class: "thumbnail"  %><%= link_to player.name, player_path(player) %> </td>
                    <td class="text-center align-middle"><%= player.position %></td>
                    <td class="text-center align-middle"><%= player.avg_ranking %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <br>
    <br>


</div>
