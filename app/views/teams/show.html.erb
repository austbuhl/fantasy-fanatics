<h1><%= @team.name %></h1>

<h3>Owner: <%= @team.owner.username %></h3>
<h3>League: <%= link_to @team.league.name, league_path(@team.league) %></h3>

<h4>Roster:</h4>
<table>
    <tr>
        <th>Player</th>
        <th>Position</th>
        <th>AVG Ranking</th>
    </tr>

    <% @team.players.each do |player| %>
        <tr>
            <td><%= link_to player.name, player_path(player) %> </td>
            <td><%= player.position %></td>
            <td><%= player.avg_ranking %></td>
        </tr>
    <% end %>
</table>

<h4>Add New Players:</h4>
<%=button_to "Add Players", new_player_team_path, params: {team: @team}, method: "get"  %>
