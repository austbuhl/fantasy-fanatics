<div class="container">
  <h1 class = "mt-3">Your Teams</h1>
    <div class="row m-3">
        <% @current_user.teams.each do |team| %>
            <div class="card m-3 border-secondary" style="width: 18rem;">
                <div class="card-body">
                    <h4 class="card-title"><%= team.name %></h4>
                    <h5 class="card-subtitle"><em><%= link_to team.league.name, league_path(team.league) %></em></h5>
                    <h6 class="card-subtitle mt-2 text-muted">Top Scorers</h6>
                    <ul class="list-group list-group-flush">
                        <% team.players[0..2].each do |player|%>
                            <li class="list-group-item"><%= player.name %></li>
                        <% end%>
                    </ul>
                </div>

                <div class="card-footer">
                    <%= link_to "view team", team_path(team), class: "btn btn-primary btn-sm"%>
                </div>
            </div>
        <% end %>
    </div>
    <%= button_to "Join a League", leagues_path, method: "get", class: "btn btn-success" %>

</div>
