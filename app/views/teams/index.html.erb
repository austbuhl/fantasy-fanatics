<div class="container">
  <h1>Your Teams</h1>
    <div class="row">
        <% @current_user.teams.each do |team| %>
            <section class="col-sm-6 col-md-4 col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= team.name %></h4>
                        <p class="card-subtitle sm"><em><%= link_to team.league.name, league_path(team.league) %></em></p>
                        <br>
                        <%= link_to "view team", team_path(team), class: "btn btn-primary btn-sm"%>
                    </div>
                </div>
            </section>
        <% end %>
    </div>
  <%= button_to "Create a New League", new_league_path, method: "get" %>
</div>  
