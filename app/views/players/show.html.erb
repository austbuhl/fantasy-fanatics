<div class="container">
    
  <div class="card mt-5" style="width: 30rem;">
    <%= image_tag @player.photo_url, :class => "card-img-top" %>
    <br>
    <br>
  <div class="card-body">
    <h1><%= @player.name %></h1>
        <b> Position: </b> <%= @player.position %>
      <br>
        <b> Avg Ranking: </b> <%= @player.avg_ranking %>
      <br>
      <br>
    <table class= "table table-bordered table-sm">
        <thead class="thead-light">
          <tr>
              <th>Analyst Name</th>
              <th>Ranking</th>
          </tr>
        </thead>
        <% @player.rankings.each do |ranking| %>
            <tr>
                <td><%= ranking.analyst.username %></td>
                <td><%= ranking.ranking %></td>
            </tr>
      <% end %>

    </table>
  </div>
</div>
